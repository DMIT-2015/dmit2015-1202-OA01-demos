<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>facesServlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>facesServlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>javax.faces.ENABLE_WEBSOCKET_ENDPOINT</param-name>
        <param-value>true</param-value> <!-- Explicitly required to activate f:websocket. -->
    </context-param>
    <context-param>
        <param-name>javax.faces.FACELETS_BUFFER_SIZE</param-name>
        <param-value>102400</param-value> <!-- 100 kB, so that the AjaxExceptionHandler has chance to reset the response when an exception occurs during render response phase. -->
    </context-param>
    <context-param>
        <param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
        <param-value>true</param-value> <!-- Prevent comments from evaluating any EL expressions and ending up in generated HTML output. -->
    </context-param>
    <context-param>
        <param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value> <!-- Prevent empty string submitted values from polluting the model with empty strings instead of nulls. -->
    </context-param>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value> <!-- Switchable between Development, UnitTest, SystemTest and Production. -->
    </context-param>
    <context-param>
        <param-name>javax.faces.validator.ENABLE_VALIDATE_WHOLE_BEAN</param-name>
        <param-value>true</param-value> <!-- Explicitly required to activate f:validateWholeBean. -->
    </context-param>

    <!-- BootsFaces Theme Usage -->
    <context-param>
        <param-name>BootsFaces_USETHEME</param-name>
        <param-value>default</param-value>
    </context-param>
    <context-param>
        <param-name>BootsFaces_THEME</param-name>
        <param-value>#{theme.currentTheme}</param-value>
    </context-param>
    <!-- Activates the waitcursor and the double-click protection -->
    <context-param>
        <param-name>net.bootsfaces.blockUI</param-name>
        <param-value>true</param-value>
    </context-param>


    <servlet>
        <servlet-name>H2Console</servlet-name>
        <servlet-class>org.h2.server.web.WebServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>H2Console</servlet-name>
        <url-pattern>/h2-console/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>H2 Console</web-resource-name>
            <url-pattern>/h2-console/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>DEVELOPER</role-name>
        </auth-constraint>
    </security-constraint>


    <security-constraint>
        <display-name>Use HTTPS only</display-name>
        <web-resource-collection>
            <web-resource-name>sslResources</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <!-- Restricted access to TodoItem pages to any authenticated user -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>RestrictTodoItem</web-resource-name>
            <url-pattern>/todoitems/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>**</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Restrict access to create and edit Movie to the roles DEVELOPER, Sales Rep, Sales Manager -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>RestrictMovieCreateEdit</web-resource-name>
            <url-pattern>/movies/create.xhtml</url-pattern>
            <url-pattern>/movies/edit.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Sales</role-name>
            <role-name>USER</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Restrict access to delete Movie to the the roles DEVELOPER and Sales Manager -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>RestrictedMovieDelete</web-resource-name>
            <url-pattern>/movies/delete.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Administration</role-name>
            <role-name>Executive</role-name>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>DEVELOPER</role-name>
    </security-role>
    <security-role>
        <role-name>Sales</role-name>
    </security-role>
    <security-role>
        <role-name>USER</role-name>
    </security-role>
    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>
    <security-role>
        <role-name>Administration</role-name>
    </security-role>
    <security-role>
        <role-name>Executive</role-name>
    </security-role>

    <error-page>
        <error-code>401</error-code>
        <location>/errorpages/401.xhtml</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/errorpages/403.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/errorpages/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errorpages/500.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/errorpages/expired.xhtml</location>
    </error-page>

</web-app>

